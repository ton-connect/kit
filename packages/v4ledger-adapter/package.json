{
    "name": "@ton/v4ledger-adapter",
    "version": "0.1.0",
    "description": "Ledger hardware wallet adapter for TON V4R2 wallets",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/cjs/index.d.ts",
    "exports": {
      ".": {
        "import": {
          "types": "./dist/esm/index.d.ts",
          "default": "./dist/esm/index.js"
        },
        "require": {
          "types": "./dist/cjs/index.d.ts",
          "default": "./dist/cjs/index.js"
        }
      }
    },
    "files": ["dist"],
    "dependencies": {
      "@ledgerhq/hw-transport": "^6.31.10",
      "@ton-community/ton-ledger": "^7.3.0",
      "@ton/core": "^0.61.0",
      "@tonconnect/protocol": "^2.3.0",
      "@ton/walletkit": "workspace:*"
    },
    "devDependencies": {
      "typescript": "~5.8.3",
      "rimraf": "^6.0.1"
    },
    "scripts": {
      "build": "npm run build:clean && npm run build:cjs && npm run build:esm",
      "build:clean": "rimraf dist",
      "build:cjs": "tsc -p tsconfig.json",
      "build:esm": "tsc -p tsconfig.esm.json",
      "dev": "tsc -p tsconfig.esm.json --watch"
    }
  }