{
  "name": "@demo/v4ledger-adapter",
  "version": "0.1.0",
  "description": "Ledger hardware wallet adapter for TON V4R2 wallets",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "license": "MIT",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@ledgerhq/hw-transport": "^6.31.16",
    "@ton-community/ton-ledger": "^7.3.0",
    "@ton/core": "^0.62.1",
    "@ton/walletkit": "workspace:*",
    "@tonconnect/protocol": "catalog:"
  },
  "devDependencies": {
    "@ledgerhq/hw-transport-node-hid": "^6.29.17",
    "dotenv": "^17.2.3",
    "rimraf": "^6.1.2",
    "typescript": "~5.9.3"
  },
  "scripts": {
    "build": "pnpm build:clean && pnpm build:cjs && pnpm build:esm",
    "build:clean": "rimraf dist",
    "build:cjs": "tsc -p tsconfig.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "dev": "tsc -p tsconfig.esm.json --watch",
    "clean": "git clean -xdf dist node_modules .turbo"
  }
}
