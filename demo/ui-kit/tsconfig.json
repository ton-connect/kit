{
  "compilerOptions": {
    "target": "ES2024",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": false,
    "declarationMap": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist/esm",
    "declaration": true,
    "declarationDir": "dist/esm"
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.fixture.ts",
    "**/*.config.ts",
    "node_modules",
    "coverage",
    ".stryker-tmp",
    "coverage",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
