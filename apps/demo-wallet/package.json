{
  "name": "demo-wallet",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "e2e:deps": "playwright install --with-deps",
    "e2e": "playwright test --config e2e.config.ts --retries=3",
    "dev": "vite",
    "build": "pnpm build:extension && pnpm build:website",
    "dev:extension": "cross-env VITE_APP_ENV=extension vite build --watch --config vite.extension.config.ts",
    "build:extension": "pnpm build:extension:chrome && pnpm build:extension:firefox",
    "build:extension:chrome": "cross-env VITE_APP_ENV=extension TARGET=chrome vite build --config vite.extension.config.ts",
    "build:extension:firefox": "cross-env VITE_APP_ENV=extension TARGET=firefox vite build --config vite.extension.config.ts",
    "build:website": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "clean": "git clean -xdf .cache .turbo dist dist-extension-chrome dist-extension-firefox node_modules allure-results playwright-report test-results",
    "typecheck": "tsc --noEmit -p tsconfig.app.json"
  },
  "dependencies": {
    "@demo/v4ledger-adapter": "workspace:*",
    "@demo/wallet-core": "workspace:*",
    "@ledgerhq/hw-transport-webhid": "^6.30.12",
    "@ledgerhq/hw-transport-webusb": "^6.29.16",
    "@tailwindcss/vite": "^4.1.18",
    "@ton/core": "^0.62.1",
    "@ton/crypto": "^3.3.0",
    "@ton/walletkit": "workspace:*",
    "@truecarry/vite-plugin-web-extension": "^4.5.1",
    "@truecarry/webext-bridge": "^6.0.2",
    "buffer": "^6.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "consola": "^3.4.2",
    "immer": "^10.2.0",
    "lucide-react": "^0.562.0",
    "next-themes": "^0.4.6",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-router-dom": "^7.12.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@types/chrome": "^0.1.33",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@types/webextension-polyfill": "^0.12.4",
    "@vitejs/plugin-react": "^5.1.2",
    "allure-js-commons": "^3.4.5",
    "allure-playwright": "^3.4.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1",
    "vite-bundle-analyzer": "^1.3.2",
    "webextension-polyfill": "^0.12.0"
  }
}
