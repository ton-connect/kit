{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "lib/**", "docs/**", "!.next/cache/**"]
    },
    "build:bridge": {
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "preview": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["build"]
    },
    "//#lint": {
    },
    "verify": {
      "dependsOn": ["//#lint", "build"]
    },
    "quality": {
      "dependsOn": ["verify", "typecheck", "^quality"],
      "env": ["WALLET_MNEMONIC", "CI"]
    },
    "quality:bridge": {
      "dependsOn": ["typecheck:bridge"]
    },
    "typecheck:bridge": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "e2e": {
      "dependsOn": ["build", "^e2e"]
    },
    "clean": {
      "cache": false
    },
    "typecheck": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "generate-openapi-spec": {
      "dependsOn": ["^generate-openapi-spec"]
    }
  }
}
